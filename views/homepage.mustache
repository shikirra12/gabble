<h1>{{username}}'s Gabble</h1>

<br>
<h2>Create a new Gab</h2>
<br>
{{#user}}
<form class="" action="/create" method="post">
  <input type="text" name="title" value="" placeholder="Title">
  <br>
  <textarea name="newGab" rows="8" cols="80"></textarea>
  <button type="submit" name="button">Save Gab</button>
</form>

{{/user}}

{{#data}}
<div class="">
  <h4>{{userId}}</h4>
    {{text}}
    <br>
    {{updatedAt}}
    <p>Likes: {{likes.length}}</p>
    <form class="" action="/like/{{id}}" method="post">
      <button type="submit" name="button"> like </button>
    </form>
    {{#userId}}

    <a
     href="/delete/{{id}}">Delete It!</a>
    {{/userId}}
    <a href="/likeit/{{id}}">Who Liked It!</a>
</div>
<br>
{{/data}}
